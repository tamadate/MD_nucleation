{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C++ debug",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "${workspaceFolder}/test/a.out",
                "${workspaceFolder}/src/*cpp", 
                "${workspaceFolder}/src/*/*cpp",
                "${workspaceFolder}/src/*/*/*cpp",
                "-std=c++11",
                "-fopenmp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C++ o3",
            "command": "g++",
            "args": [
                "-O3",
                "-o",
                "${workspaceFolder}/test/a.out",
                "${workspaceFolder}/src/*cpp", 
                "${workspaceFolder}/src/*/*cpp",
                "${workspaceFolder}/src/*/*/*cpp",
                "-std=c++11",
                "-fopenmp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Compile c++ code with O3 option"
        },
        {
            "type": "cppbuild",
            "label": "mpicxx o3",
            "command": "mpicxx",
            "args": [
                "-O3",
                "-o",
                "${workspaceFolder}/test/a.out",
                "${workspaceFolder}/src/*cpp", 
                "${workspaceFolder}/src/*/*cpp",
                "${workspaceFolder}/src/*/*/*cpp",
                "-std=c++11",
                "-fopenmp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Compile c++ code with O3 option"
        },
    ],
    "version": "2.0.0"
}